<?xml version='1.0' encoding='utf-8'?>
<widget id="com.racloop.mobile" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>CabShare</name>
    <description>
        Platform to Share Cab and Auto.
    </description>
    <author email="admin@cabshare.in" href="https://www.cabshare.in">
        CabShare Team
    </author>
    <content src="index.html" />
    <preference name="permissions" value="none" />
    <preference name="orientation" value="portrait" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="false" />
    <preference name="webviewbounce" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="true" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="disable-cursor" value="false" />
    <preference name="android-minSdkVersion" value="10" />
    <preference name="android-installLocation" value="auto" />
    <!--<preference name="StatusBarOverlaysWebView" value="false" />-->
    <preference name="BackupWebStorage" value="none" />


    <icon src="icon.png" />
     <!--Spash Screen preferences specific to Android https://github.com/apache/cordova-plugin-splashscreen-->
    <preference name="SplashScreen" value="res/screen/android/spash-xhdpi.png" />
    <preference name="SplashScreenDelay" value="5000" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="auto-hide-splash-screen" value="true" />
    <platform name="android">
        <splash src="res/screen/android/splash-hdpi.png" density="port-hdpi"/>
        <splash src="res/screen/android/splash-ldpi.png" density="port-ldpi"/>
        <splash src="res/screen/android/splash-mdpi.png" density="port-mdpi"/>
        <splash src="res/screen/android/splash-xhdpi.png" density="port-xhdpi"/>
        <splash src="res/screen/android/splash-hdpi.png" density="land-hdpi"/>
        <splash src="res/screen/android/splash-ldpi.png" density="land-ldpi"/>
        <splash src="res/screen/android/splash-mdpi.png" density="land-mdpi"/>
        <splash src="res/screen/android/splash-xhdpi.png" density="land-xhdpi"/>
    </platform>
    <preference name="ios-statusbarstyle" value="black-opaque" />

    <plugin name="cordova-plugin-whitelist" version="1" />
    <!-- <plugin name="org.apache.cordova.console" /> -->
    <plugin name="cordova-plugin-device" />
    <plugin name="android-referrer-plugin" />
    <plugin name="cordova-plugin-app-preferences" />
    <plugin name="cordova-plugin-sim" />
    <!--  <plugin name="AppPreferences" />
    <plugin name="org.apache.cordova.dialogs" /> -->
    <plugin name="cordova-plugin-geolocation" />
    <!--<plugin name="org.apache.cordova.inappbrowser" />-->
    <plugin name="cordova-plugin-network-information" />
    <!--<plugin name="org.apache.cordova.splashscreen" />-->
    <!--<plugin name="org.apache.cordova.vibration" />-->
    <plugin name="cordova-plugin-statusbar" />
    <plugin name="cordova-plugin-camera" />
    <plugin name="ionic-plugins-keyboard" />
    <plugin name="com.phonegap.plugins.facebookconnect" version="0.9.0">
        <!-- Comment one of below -->
        <!-- Production
        -->
        <param name="APP_ID" value="827335057382382" />
        <param name="APP_NAME" value="CabShare" />
        <!-- Local
        <param name="APP_ID" value="827652170684004" />
        <param name="APP_NAME" value="CabShareLocal" />
        -->
    </plugin>

    <feature name="http://api.phonegap.com/1.0/network" />
    <feature name="http://api.phonegap.com/1.0/notification" />
    <feature name="http://api.phonegap.com/1.0/geolocation" />
    <feature name="http://api.phonegap.com/1.0/device" />
    <feature name="StatusBar">
        <param name="ios-package" value="CDVStatusBar" onload="true" />
    </feature>
    <feature name="Camera">
        <param name="android-package" value="org.apache.cordova.camera.CameraLauncher" />
    </feature>
    <feature name="Keyboard">
        <param name="ios-package" value="IonicKeyboard" onload="true" />
    </feature>
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
